{
    "name": "accelade/plugins",
    "description": "Complete plugin system with generator, management, and auto-discovery for Accelade ecosystem",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Fady Mondy",
            "email": "info@3x1.io",
            "homepage": "https://3x1.io",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/accelade/plugins",
    "keywords": [
        "laravel",
        "accelade",
        "plugins",
        "generator",
        "scaffold",
        "package",
        "admin",
        "panel"
    ],
    "require": {
        "php": "^8.2|^8.3|^8.4",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/filesystem": "^11.0|^12.0",
        "accelade/accelade": "^1.0"
    },
    "suggest": {
        "laravel/mcp": "Required for MCP server support (Claude Code integration)"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0|^4.0",
        "pestphp/pest-plugin-laravel": "^3.0|^4.0",
        "larastan/larastan": "^2.9|^3.0",
        "phpstan/extension-installer": "^1.3|^2.0"
    },
    "autoload": {
        "psr-4": {
            "Accelade\\Plugins\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Accelade\\Plugins\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Accelade\\Plugins\\PluginsServiceProvider"
            ],
            "aliases": {
                "Plugins": "Accelade\\Plugins\\Facades\\Plugins"
            }
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage",
        "format": "pint",
        "format:test": "pint --test",
        "analyse": "phpstan analyse --memory-limit=512M"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
